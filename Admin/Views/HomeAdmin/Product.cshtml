
@{
    ViewBag.Title = "Quản lý sản phẩm";
}
<link href="~/styles/admin.css" rel="stylesheet" />
<link href="~/styles/product-admin.css" rel="stylesheet" />

<div class="admin-content">

    <h1>📦 Quản lý sản phẩm</h1>

    <button id="addProductBtn" class="add-btn">➕ Thêm sản phẩm</button>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên SP</th>
                <th>Giá</th>
                <th>Danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody id="productTableBody"></tbody>
    </table>

</div>

<!-- POPUP THÊM/SỬA -->
<div class="popup" id="productPopup">
    <div class="popup-content">
        <h2 id="popupTitle">Thêm sản phẩm</h2>

        <input type="text" id="pName" placeholder="Tên sản phẩm">
        <input type="number" id="pPrice" placeholder="Giá sản phẩm">
        <input type="text" id="pImg" placeholder="Link ảnh">
        <input type="text" id="pCategory" placeholder="Danh mục">

        <button id="saveProduct" class="confirm-btn">Lưu</button>
        <button id="closePopup" class="cancel-btn">Hủy</button>
    </div>
</div>
<script src="~/Scripts/product.js"></script>

